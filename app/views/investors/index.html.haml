.page-header
  = link_to "Create Investor", new_investor_path, class:"btn btn-info pull-right"
  %h1 ANGEL INVESTORS
%h4 Extra text, if you want to display something specific.
%table.table.table-striped.table-bordered
  %thead
    %tr
      %th Full Name
      %th Email
      %th Company
      %th Rank
      %th Edit
      %th Delete
  %tbody
    - @investors.each do |investor|
      %tr
        %td
          = investor.full_name
        %td
          = investor.email
        %td
          = investor.company
        %td
          = investor.rank
        %td
          = link_to "Edit", edit_investor_path(investor.id)
        %td
          = link_to '', investor_path(investor.id), method: :delete, class:"glyphicon glyphicon-remove"
